# Rabbit Settings (if running rabbitmq with docker, provide container name 'rabbitmq' as host.)
RABBIT_HOST=localhost 
RABBIT_PORT=5672
RABBIT_USER=guest
RABBIT_PASS=guest
RABBIT_VHOST=/

LOG_LEVEL=info
LOG_FORMAT='%(asctime)s:%(name)s: %(message)s'

# Database Settings (if running db with docker, provide container name 'postgres' as host.)
DB_HOST=localhost 
DB_USER=root
DB_PASS=root
DB_NAME=soso_db
DB_SCHEMA=soso_schema
DB_DRIVER=postgresql+psycopg2

DB_VIEWS_WITH_ID_FIELD=gs_outage_order, sat_outage_order, scheduled_imaging, scheduled_maintenance

# Message Queues for direct communication
IMAGE_MANAGEMENT_QUEUE=image_management
SCHEDULER_QUEUE=scheduler
SAT_ACTIVITIES_QUEUE=satellite_activities
GS_OUTBOUND_QUEUE=ground_station_outbound
RELAY_API_QUEUE=relay_api